<h2>Settings</h2>

<p>Welcome, <%= current_user.username %>!</p>

<hr>

<h2>Your Queue has <%= current_user.photos.count %> Photos</h2>

<a href="/bookmark/<%= current_user.username %>">Bookmark</a>

<% if unsplash_user %>
  <h3>Your Liked Photos (Total: <%= @count_of_likes %>)</h3>
  <% @likes.each do |photo| %>
    <a href="https://unsplash.com/?photo=<%= photo[:id]%>" target="_blank">
      <img src="<%= photo[:thumb] %>">
    </a>
  <% end %>
  <a href="https://unsplash.com/@<%= @unsplash_username %>/likes" target="_blank">
    View All
  </a>
  <form action="/queue/<%= current_user.username %>" method="post">
    <input id="hidden" type="hidden" name="collections" value="liked">
    <input type="submit" value="Add Liked Photos to Queue">
  </form>

  <h3>Your Photo Collections</h3>
  <% @collections.each do |collection| %>
    <h4><%= collection[:title] %> (Total: <%= collection[:count] %>)</h4>
    <% collection[:photos].each do |photo| %>
      <a href="https://unsplash.com/?photo=<%= photo[:id]%>" target="_blank">
        <img src="<%= photo[:thumb] %>">
      </a>
    <% end %>

    <a href="http://unsplash.com/collections/<%= collection[:id] %>" target="_blank">
      View Collection
    </a>

    <form action="/queue/<%= current_user.username %>" method="post">
      <input id="hidden" 
             type="hidden" 
             name="collections" 
             value="<%= collection[:id] %>">
      <input type="submit" 
             value="Add Collection <%= collection[:title] %> to Queue">
    </form>
  <% end %>
<% end %>

<hr>

<div>
  <h3>Photo Vistas Account Settings</h3>
  <ul>
    <li>Username: <%= current_user.username %></li>
    <li>Email: <%= current_user.email %></li>
  </ul>
  <div>
    <a href="/settings/<%= current_user.username %>/edit">
      Edit Account Settings
    </a>
  </div>
</div>

<div>
  <% if unsplash_user %>
    <div>
      <p>Unsplash Username: <%= unsplash_user[:username] %><p>
      <a href="/unsplash/unlink">Unlink Unsplash Account</a>
    </div>
    <p>(Unlinking will remove Photo Vistas' access to your Unsplash account.  Your photos will remain in their queue, but you won't be able to add additional photos from your account.  Please note, this will not deauthorize Photo Vistas from your Unsplash account.)
  <% else %>
    <a href="/unsplash/auth">Link Unsplash Account</a>
    <p>(Linking an Unsplash account will allow you to add liked photos, photo
    collections and unloaded photos to your Photo Vistas queue.)</p>
  <% end %>
</div>

